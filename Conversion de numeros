// 10.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
void main ()
{
	int n,d,r,i,s;
	float b;
	do{
	cout<<"Escribir el numero que desea convertir: ";
	cin>>n;
	}while(n<0);
	cout<<endl;
	cout<<"Ingrese la base del numero: ";
	cin>>b;
	cout<<endl;
	i=0;
	s=0;
	while(n>0)
	{
		r=n%10;
		n=n/10;
		d=r*pow(b,i);
		i++;
		s=s+d;
	}
	cout<<endl;
	cout<<"El numero en base 10 es: "<<s;
	getch();
}
