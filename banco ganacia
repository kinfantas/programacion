Proceso ganancia
	mostrar "ingrese monto e bs"
	leer a;
	si (a > 20000)
		a <- a * 0.02;
		ostar "el 2% de a, es:",a;
	Sino
		a <- a * 0.01;
		mostrar "el 1% de a, es:",a;
	FinSi
FinProceso





